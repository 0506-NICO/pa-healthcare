# ============================================
# SECURE BACKEND ENVIRONMENT VARIABLES
# Copy this to .env and fill in your values
# ============================================

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=5000

# Allowed frontend origins (comma-separated)
ALLOWED_ORIGINS=https://your-frontend.netlify.app,https://www.yourdomain.com
# For development, add: http://localhost:3000

# ============================================
# SECURITY
# ============================================

# JWT Secret (CHANGE THIS! Generate with: openssl rand -base64 64)
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_min_64_characters
JWT_EXPIRES_IN=7d

# Session Secret (CHANGE THIS!)
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_LONG_RANDOM_STRING

# Encryption Key (for sensitive data)
ENCRYPTION_KEY=CHANGE_THIS_32_CHARACTER_KEY_123

# ============================================
# DATABASE - FIREBASE
# ============================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# ============================================
# DATABASE - SUPABASE (Alternative)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here

# ============================================
# PAYMENT GATEWAYS
# ============================================

# Paystack
PAYSTACK_SECRET_KEY=sk_live_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_live_your_paystack_public_key
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret

# Flutterwave
FLUTTERWAVE_SECRET_KEY=FLWSECK-your_flutterwave_secret_key
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-your_flutterwave_public_key
FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK_TEST-your_encryption_key

# Stripe (Optional)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# EMAIL SERVICE
# ============================================

# SendGrid (Recommended)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your Business Name

# Mailgun (Alternative)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=mg.yourdomain.com

# SMTP (Generic - Gmail, etc)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# ============================================
# SMS SERVICE
# ============================================

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Africa's Talking (Alternative)
AFRICAS_TALKING_USERNAME=your_username
AFRICAS_TALKING_API_KEY=your_api_key
AFRICAS_TALKING_SENDER=YourApp

# ============================================
# FILE STORAGE (Optional)
# ============================================

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ============================================
# BUSINESS INFORMATION
# ============================================
BUSINESS_NAME=HealthCare Plus
BUSINESS_EMAIL=info@healthcareplus.com
BUSINESS_PHONE=+234-800-123-4567
BUSINESS_ADDRESS=123 Health Street, Lagos, Nigeria

# Currency
CURRENCY=NGN
CURRENCY_SYMBOL=â‚¦

# ============================================
# FRONTEND URLs
# ============================================
FRONTEND_URL=https://your-frontend.netlify.app
# For development: http://localhost:3000

ADMIN_DASHBOARD_URL=https://admin.yourdomain.com

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
PAYMENT_RATE_LIMIT_MAX=10

# ============================================
# LOGGING & MONITORING
# ============================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# ============================================
# SECURITY FEATURES
# ============================================

# Enable 2FA
ENABLE_TWO_FACTOR=false

# Enable Email Verification
REQUIRE_EMAIL_VERIFICATION=true

# Account Lockout
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Password Policy
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHAR=true
REQUIRE_NUMBER=true
REQUIRE_UPPERCASE=true

# ============================================
# WEBHOOK URLs
# ============================================
PAYSTACK_WEBHOOK_URL=https://your-backend.herokuapp.com/api/payments/webhook/paystack
FLUTTERWAVE_WEBHOOK_URL=https://your-backend.herokuapp.com/api/payments/webhook/flutterwave

# ============================================
# ADMIN CREDENTIALS (Initial Setup)
# ============================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
ADMIN_NAME=Super Admin

# ============================================
# CORS SETTINGS
# ============================================
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# ============================================
# SSL/TLS
# ============================================
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# ============================================
# BACKUP & MAINTENANCE
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
MAINTENANCE_MODE=false

# ============================================
# TESTING
# ============================================
TEST_DATABASE_URL=your_test_database_url
TEST_PAYSTACK_KEY=sk_test_your_test_key
